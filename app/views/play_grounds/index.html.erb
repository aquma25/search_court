<h2 id="court_name"></h2>

<!-- GoogleMap表示 -->
<div id='map'></div>

<!-- play_groundのRecordを持ってくる -->
<input type="hidden" id="play_grounds_json" value="<%= @play_grounds_json %>">
<!-- 現環境を確認する -->
<input type="hidden" id="rails_path" value="<%= @rails_path %>">

<% @play_grounds&.each.with_index(1) do |court, index| %>
  <p>name: <%= court.court_name %></p>
  <p>content: <%= court.content %></p>
  <%= link_to "詳細を表示する", play_ground_path(court.id) %><br/><br/>
  <!-- 地名入力用のinputを追加 -->
  <input id="street_court_<%= index %>" type="hidden" value="<%= court.court_name %>">

  <!-- buttonをクリックしたらdisp_markerを実行　-->
  <input type="button" value="ShowMap"
    onclick="dispMarker(
      <%= court.latitude.to_f %>,
      <%= court.longitude.to_f %>,
      <%= court.id %>,
      <%= index %>,
      'street_',
      '<%= @rails_path %>'
    )"
  >
<% end %>