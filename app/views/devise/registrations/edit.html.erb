<h2><%= t('.title', resource: resource.model_name.human) %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    名前<br/>
    <%= f.text_field :name, autocomplete: "name" %>
  </div>

  <div class="field">
    ニックネーム *必須項目<br/>
    ※半角英数字で登録して下さい<br/>
    <%= f.text_field :nick_name, autocomplete: "nick_name" %>
  </div>

  <div class="field">
    郵便番号<br/>
    <%= f.text_field :postcode, autocomplete: "postcode" %>
  </div>

  <div class="field">
    都道府県<br/>
    ※ここを基準として地図を表示します<br/>
    <%= f.select :prefecture, @prefecture_names, autocomplete: "prefecture" %>
  </div>

  <div class="field">
    市区町村(ex: 世田谷区三軒茶屋)<br/>
    ※ここを基準として地図を表示します<br/>
    <%= f.text_field :city, autocomplete: "city" %>
  </div>

  <div class="field">
    番地・建物名・部屋番号(ex: 4-26-22-301)<br/>
    <%= f.text_field :block, autocomplete: "block" %>
  </div>

  <div class="field">
    性別<br/>
    <%= f.select :gender, [["男性", "男性"], ["女性", "女性"]], autocomplete: "gender" %>
  </div>

  <div class="field">
    電話番号<br/>
    <%= f.text_field :phone_num, autocomplete: "phone_num" %>
  </div>

  <div class="field">
    ユーザ画像<br/>
    <%= f.file_field :image, autocomplete: "image" %>
  </div><br/><br/>

  <div class="field">
    ナワバリ<br/>
    <%= f.select :territory, @territory_names, autocomplete: "territory" %>
  </div>

  <div class="field">
    自己紹介<br/>
    <%= f.text_field :bio, autocomplete: "bio" %>
  </div>

  <div class="actions">
    <%= f.submit t('.update') %>
  </div>
<% end %>

